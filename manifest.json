{
    "name": "__MSG_appName__",
    "description": "__MSG_appDescription__",
    "version": "0.3.0",
    "manifest_version": 2,
    "default_locale": "en",
    "permissions": [
        "app.window",
        {
            "fileSystem": [
                "write",
                "retainEntries",
                "directory"
            ]
        },
        "fullscreen",
        "geolocation",
        "https://*.mapbox.com/",
        "https://*.tiles.mapbox.com/",
        "https://*.vk.com/"
    ],
    "icons": {
        "16": "static/icon-16.png",
        "128": "static/icon-128.png"
    },
    "app": {
        "background": {
            "scripts": [
                "static/background.js"
            ]
        }
    },
    "offline_enabled": true,
    "sandbox": {
        "pages": ["static/sandbox/Map/Map.html"]
    }
}
